{
  "manifest_version": 2,
  "name": "metafilter-newcommentsbadge",
  "version": "1.0.0",
  "description": "Unofficial Metafilter web extension to show a new comments badge.",
  "icons": {
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [{
    "matches": ["*://*.metafilter.com/*"],
    "js": ["content/index.js"],
    "css": ["content/index.css"]
  }]
}